{project_plugins, [{erlfmt, "~> 0.14"}]}.

{deps, [
    {cargo,
        {git, "https://github.com/rusterlium/erlang-cargo.git",
            {branch, "master"}}}
]}.

{eunit_tests, [rebar3_cargo]}.

{ct_opts, [
    {dir, "ct"}
]}.

{dialyzer, [
    {warnings, [unknown]}
]}.

{erlfmt, [
    check,
    verbose,
    {files, ["src/*", "ct/*.erl", "rebar.config"]}
]}.
